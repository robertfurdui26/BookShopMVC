@model IEnumerable<BookShopMVC.Models.BookModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="book-card">Books</h1>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5>@item.Title</h5>
                    <hr/>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Author: @item.Author</p>
                    <p class="card-text">Created: @item.Created</p>
                    <p class="card-text">Price: @item.Price</p>


                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-buy ">Buy</a>
                </div>
            </div>
        </div>
    }
</div>
