@model BookShopMVC.Models.BookModel

@{
    ViewData["Title"] = "Create";
}


<h4>Add Book</h4>

<div class="row align-content-lg-center add">
    <div class="col-md-4">
        <form asp-action="Create"   class="custom-form">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control border-3" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control border-3" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">Author</label>
                <input asp-for="Author" class="form-control border-3" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label">Created</label>
                <input asp-for="Created" class="form-control border-3" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control border-3" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
          
            <div class="form-group my-3">
                <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />
                <a asp-action="Index" class="btn btn-primary btn-lg btn-block">Back to List</a>
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
